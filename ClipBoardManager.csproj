<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Title>Clippy Clipboard Managet</Title>
    <Authors>Richard Claxton</Authors>
    <PackageIcon>paperclip.png</PackageIcon>
    <ApplicationIcon>paperclip.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="paperclip.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icons\paperclip.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="paperclip.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>